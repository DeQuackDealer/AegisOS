<html>
<head>
<title>Aegis OS Media Creation Tool</title>
<HTA:APPLICATION
    ID="AegisMediaTool"
    APPLICATIONNAME="Aegis OS Media Creation Tool"
    BORDER="dialog"
    BORDERSTYLE="normal"
    CAPTION="yes"
    MAXIMIZEBUTTON="no"
    MINIMIZEBUTTON="yes"
    SHOWINTASKBAR="yes"
    SINGLEINSTANCE="yes"
    SYSMENU="yes"
    VERSION="2.0"
    SCROLL="no"
/>
<style>
* { margin: 0; padding: 0; box-sizing: border-box; }
body {
    font-family: 'Segoe UI', Tahoma, sans-serif;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: #fff;
    overflow: hidden;
}
.container { height: 100%; display: flex; flex-direction: column; }
.header {
    background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
    padding: 20px 25px;
    display: flex;
    align-items: center;
    gap: 15px;
}
.logo-icon {
    width: 48px; height: 48px;
    background: rgba(255,255,255,0.2);
    border-radius: 12px;
    display: flex; align-items: center; justify-content: center;
    font-size: 24px; font-weight: bold;
}
.header-text h1 { font-size: 18px; font-weight: 600; }
.header-text p { font-size: 12px; opacity: 0.9; }
.content { flex: 1; padding: 25px; overflow-y: auto; }
.step-nav { display: flex; justify-content: center; gap: 30px; margin-bottom: 25px; }
.step-item { text-align: center; }
.step-num {
    width: 32px; height: 32px; border-radius: 50%;
    background: #2a2a4a; border: 2px solid #444;
    display: flex; align-items: center; justify-content: center;
    margin: 0 auto 5px; font-weight: 600; font-size: 14px;
}
.step-item.active .step-num { background: #0891b2; border-color: #0891b2; }
.step-item.done .step-num { background: #10b981; border-color: #10b981; }
.step-label { font-size: 11px; color: #888; }
.step-item.active .step-label { color: #0891b2; }
.step-item.done .step-label { color: #10b981; }
.panel { display: none; }
.panel.active { display: block; }
.section-title { font-size: 20px; font-weight: 600; margin-bottom: 8px; }
.section-desc { font-size: 13px; color: #aaa; margin-bottom: 20px; line-height: 1.5; }
.info-box {
    background: rgba(8, 145, 178, 0.15);
    border: 1px solid rgba(8, 145, 178, 0.3);
    border-radius: 8px; padding: 15px; margin-bottom: 20px;
}
.info-box h3 { font-size: 14px; margin-bottom: 8px; color: #22d3ee; }
.info-box ul { font-size: 12px; color: #aaa; padding-left: 20px; }
.info-box li { margin-bottom: 4px; }
.drive-list {
    background: #1e1e3a; border: 1px solid #333;
    border-radius: 8px; max-height: 180px; overflow-y: auto; margin-bottom: 15px;
}
.drive-item {
    padding: 12px 15px; border-bottom: 1px solid #333;
    cursor: pointer; display: flex; align-items: center; gap: 12px;
}
.drive-item:last-child { border-bottom: none; }
.drive-item:hover { background: #2a2a4a; }
.drive-item.selected { background: rgba(8, 145, 178, 0.3); border-left: 3px solid #0891b2; }
.drive-icon {
    width: 36px; height: 36px; background: #0891b2; border-radius: 6px;
    display: flex; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;
}
.drive-info { flex: 1; }
.drive-name { font-weight: 500; font-size: 14px; }
.drive-size { font-size: 12px; color: #888; }
.no-drives { padding: 30px; text-align: center; color: #888; }
.btn {
    padding: 12px 24px; border-radius: 8px;
    font-weight: 600; cursor: pointer; border: none; font-size: 14px;
}
.btn-primary { background: linear-gradient(135deg, #0891b2, #0e7490); color: white; }
.btn-primary:hover { transform: translateY(-1px); }
.btn-primary:disabled { background: #444; cursor: not-allowed; transform: none; }
.btn-secondary { background: #2a2a4a; color: #aaa; border: 1px solid #444; }
.btn-refresh { background: #1e1e3a; color: #0891b2; padding: 8px 16px; font-size: 12px; }
.btn-row { display: flex; gap: 10px; margin-top: 20px; }
.progress-container { background: #1e1e3a; border-radius: 8px; padding: 25px; text-align: center; }
.progress-bar-bg { height: 12px; background: #2a2a4a; border-radius: 6px; overflow: hidden; margin: 20px 0; }
.progress-bar-fill {
    height: 100%; background: linear-gradient(90deg, #0891b2, #22d3ee);
    width: 0%; transition: width 0.3s; border-radius: 6px;
}
.progress-percent { font-size: 36px; font-weight: 700; color: #22d3ee; }
.progress-status { font-size: 14px; color: #aaa; margin-top: 10px; }
.progress-detail { font-size: 12px; color: #666; margin-top: 5px; }
.success-container { text-align: center; padding: 30px; }
.success-icon { font-size: 48px; margin-bottom: 20px; color: #10b981; }
.success-title { font-size: 24px; color: #10b981; margin-bottom: 10px; }
.success-desc { font-size: 14px; color: #aaa; line-height: 1.6; }
.success-steps { background: #1e1e3a; border-radius: 8px; padding: 20px; margin-top: 20px; text-align: left; }
.success-steps h3 { font-size: 14px; margin-bottom: 12px; }
.success-steps ol { padding-left: 20px; font-size: 13px; color: #aaa; }
.success-steps li { margin-bottom: 8px; }
.error-box {
    background: rgba(239, 68, 68, 0.15); border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px; padding: 15px; color: #f87171; margin-top: 15px;
}
.warning-box {
    background: rgba(245, 158, 11, 0.15); border: 1px solid rgba(245, 158, 11, 0.3);
    border-radius: 8px; padding: 15px; margin-bottom: 15px;
}
.warning-box strong { color: #fbbf24; }
.footer {
    padding: 12px 25px; background: #12122a; border-top: 1px solid #333;
    font-size: 11px; color: #666; text-align: center;
}
</style>
<script language="VBScript">
Dim selectedDrive, selectedDriveNumber, drives(), driveCount
Dim progressTimer, shell, fso

Sub Window_OnLoad()
    window.resizeTo 550, 620
    Set shell = CreateObject("WScript.Shell")
    Set fso = CreateObject("Scripting.FileSystemObject")
    RefreshDrives()
End Sub

Sub RefreshDrives()
    Dim wmi, diskDrives, disk, html, i
    
    On Error Resume Next
    Set wmi = GetObject("winmgmts:\\.\root\cimv2")
    Set diskDrives = wmi.ExecQuery("SELECT * FROM Win32_DiskDrive WHERE MediaType LIKE '%Removable%' OR InterfaceType='USB'")
    On Error Goto 0
    
    ReDim drives(0)
    driveCount = 0
    html = ""
    
    For Each disk In diskDrives
        If disk.Size > 0 Then
            If InStr(LCase(disk.PNPDeviceID), "virtual") = 0 Then
                Dim sizeGB
                sizeGB = FormatNumber(disk.Size / 1073741824, 1)
                
                ReDim Preserve drives(driveCount)
                drives(driveCount) = disk.Index
                
                html = html & "<div class='drive-item' onclick='SelectDrive(" & driveCount & ")'>"
                html = html & "<div class='drive-icon'>USB</div>"
                html = html & "<div class='drive-info'>"
                html = html & "<div class='drive-name'>" & disk.Model & "</div>"
                html = html & "<div class='drive-size'>" & sizeGB & " GB - Disk " & disk.Index & "</div>"
                html = html & "</div></div>"
                
                driveCount = driveCount + 1
            End If
        End If
    Next
    
    If driveCount = 0 Then
        html = "<div class='no-drives'>No USB drives detected.<br><br>Insert a USB drive (4GB+) and click Refresh.</div>"
    End If
    
    document.getElementById("driveList").innerHTML = html
    selectedDrive = ""
    selectedDriveNumber = -1
    document.getElementById("btnNext1").disabled = True
End Sub

Sub SelectDrive(index)
    Dim items, i
    Set items = document.getElementsByClassName("drive-item")
    For i = 0 To items.length - 1
        items(i).className = "drive-item"
    Next
    items(index).className = "drive-item selected"
    
    selectedDriveNumber = drives(index)
    selectedDrive = items(index).getElementsByClassName("drive-name")(0).innerText
    document.getElementById("btnNext1").disabled = False
End Sub

Sub GoToStep(stepNum)
    Dim panels, steps, i
    
    Set panels = document.getElementsByClassName("panel")
    For i = 0 To panels.length - 1
        panels(i).className = "panel"
    Next
    document.getElementById("step" & stepNum).className = "panel active"
    
    Set steps = document.getElementsByClassName("step-item")
    For i = 0 To steps.length - 1
        If i + 1 < stepNum Then
            steps(i).className = "step-item done"
        ElseIf i + 1 = stepNum Then
            steps(i).className = "step-item active"
        Else
            steps(i).className = "step-item"
        End If
    Next
    
    If stepNum = 2 Then
        document.getElementById("selectedDriveInfo").innerText = selectedDrive & " (Disk " & selectedDriveNumber & ")"
    End If
End Sub

Sub StartCreation()
    GoToStep(3)
    CreateUSB()
End Sub

Sub CreateUSB()
    Dim tempDir, psFile, progressFile, psCode, ts
    
    tempDir = shell.ExpandEnvironmentStrings("%TEMP%")
    psFile = tempDir & "\aegis_creator.ps1"
    progressFile = tempDir & "\aegis_progress.txt"
    
    If fso.FileExists(progressFile) Then
        fso.DeleteFile progressFile
    End If
    
    psCode = GetPowerShellCode()
    
    Set ts = fso.CreateTextFile(psFile, True)
    ts.Write psCode
    ts.Close
    
    Dim cmd
    cmd = "powershell.exe -ExecutionPolicy Bypass -WindowStyle Hidden -File """ & psFile & """ -DiskNumber " & selectedDriveNumber & " -ProgressFile """ & progressFile & """"
    
    shell.Run cmd, 0, False
    
    progressTimer = window.setInterval(GetRef("CheckProgress"), 1000)
End Sub

Function GetPowerShellCode()
    Dim code
    code = "param([int]$DiskNumber, [string]$ProgressFile)" & vbCrLf
    code = code & "$ErrorActionPreference = 'Stop'" & vbCrLf
    code = code & "function Write-P { param([int]$P, [string]$S); ""$P|$S"" | Out-File $ProgressFile -Encoding UTF8 -Force }" & vbCrLf
    code = code & "function Test-Admin { ([Security.Principal.WindowsPrincipal][Security.Principal.WindowsIdentity]::GetCurrent()).IsInRole([Security.Principal.WindowsBuiltInRole]::Administrator) }" & vbCrLf
    code = code & "if (-not (Test-Admin)) { Write-P -1 'ERROR: Run as Administrator. Right-click the file and select Run as Administrator.'; exit 1 }" & vbCrLf
    code = code & "try {" & vbCrLf
    code = code & "Write-P 0 'Starting...'" & vbCrLf
    code = code & "$disk = Get-Disk -Number $DiskNumber" & vbCrLf
    code = code & "if ($disk.IsSystem -or $disk.IsBoot) { Write-P -1 'ERROR: Cannot use system drive'; exit 1 }" & vbCrLf
    code = code & "Write-P 5 'USB drive validated'" & vbCrLf
    code = code & "$tempDir = ""$env:TEMP\AegisOS""; New-Item -ItemType Directory -Path $tempDir -Force | Out-Null" & vbCrLf
    code = code & "$isoPath = ""$tempDir\base.iso""" & vbCrLf
    code = code & "$isoUrl = 'https://mirrors.layeronline.com/linuxlite/isos/7.2/linux-lite-7.2-64bit.iso'" & vbCrLf
    code = code & "Write-P 8 'Downloading Aegis OS base system (~2.1 GB)...'" & vbCrLf
    code = code & "Write-P 10 'This will take 5-20 minutes depending on connection...'" & vbCrLf
    code = code & "$wc = New-Object System.Net.WebClient" & vbCrLf
    code = code & "$wc.Headers.Add('User-Agent','AegisOS/2.0')" & vbCrLf
    code = code & "try { $wc.DownloadFile($isoUrl, $isoPath) } catch { Write-P -1 ""ERROR: Download failed - $($_.Exception.Message)""; exit 1 }" & vbCrLf
    code = code & "$wc.Dispose()" & vbCrLf
    code = code & "if (-not (Test-Path $isoPath) -or (Get-Item $isoPath).Length -lt 500MB) { Write-P -1 'ERROR: Download incomplete'; exit 1 }" & vbCrLf
    code = code & "Write-P 50 'Download complete. Preparing USB drive...'" & vbCrLf
    code = code & "Start-Sleep 2" & vbCrLf
    code = code & "Write-P 52 'WARNING: Erasing USB drive...'" & vbCrLf
    code = code & "$dp = ""select disk $DiskNumber`nclean""; $dp | Out-File ""$tempDir\dp.txt"" -Encoding ASCII" & vbCrLf
    code = code & "diskpart /s ""$tempDir\dp.txt"" | Out-Null" & vbCrLf
    code = code & "Start-Sleep 2" & vbCrLf
    code = code & "Write-P 55 'Writing system to USB (5-15 minutes)...'" & vbCrLf
    code = code & "Write-P 58 'Do not remove the USB drive!'" & vbCrLf
    code = code & "$phys = '\\.\PhysicalDrive' + $DiskNumber" & vbCrLf
    code = code & "$src = [IO.File]::OpenRead($isoPath)" & vbCrLf
    code = code & "$dst = New-Object IO.FileStream($phys, [IO.FileMode]::Open, [IO.FileAccess]::Write, [IO.FileShare]::None, 4MB, [IO.FileOptions]::WriteThrough)" & vbCrLf
    code = code & "$buf = New-Object byte[] 4MB; $written = 0; $total = $src.Length; $last = 60" & vbCrLf
    code = code & "while (($read = $src.Read($buf, 0, $buf.Length)) -gt 0) {" & vbCrLf
    code = code & "  $dst.Write($buf, 0, $read); $written += $read" & vbCrLf
    code = code & "  $pct = [int](($written / $total) * 100); $mp = 60 + [int]($pct * 0.35)" & vbCrLf
    code = code & "  if ($mp -gt $last) { $mb = [math]::Round($written/1MB); Write-P $mp ""Writing: $mb MB ($pct%)""; $last = $mp }" & vbCrLf
    code = code & "}" & vbCrLf
    code = code & "$dst.Flush(); $dst.Close(); $src.Close()" & vbCrLf
    code = code & "Write-P 96 'Syncing data...'" & vbCrLf
    code = code & "Start-Sleep 3" & vbCrLf
    code = code & """rescan"" | Out-File ""$tempDir\rs.txt"" -Encoding ASCII; diskpart /s ""$tempDir\rs.txt"" | Out-Null" & vbCrLf
    code = code & "Remove-Item $tempDir -Recurse -Force -ErrorAction SilentlyContinue" & vbCrLf
    code = code & "Write-P 100 'SUCCESS! Aegis OS Freemium is ready!'" & vbCrLf
    code = code & "} catch { Write-P -1 ""ERROR: $($_.Exception.Message)""; exit 1 }" & vbCrLf
    GetPowerShellCode = code
End Function

Sub CheckProgress()
    Dim progressFile, ts, line, parts, pct, status
    
    progressFile = shell.ExpandEnvironmentStrings("%TEMP%") & "\aegis_progress.txt"
    
    If fso.FileExists(progressFile) Then
        On Error Resume Next
        Set ts = fso.OpenTextFile(progressFile, 1)
        If Err.Number = 0 Then
            line = ts.ReadLine()
            ts.Close
            
            parts = Split(line, "|")
            If UBound(parts) >= 1 Then
                pct = CInt(parts(0))
                status = parts(1)
                
                If pct = -1 Then
                    window.clearInterval(progressTimer)
                    ShowError(status)
                ElseIf pct = 100 Then
                    window.clearInterval(progressTimer)
                    GoToStep(4)
                Else
                    UpdateProgress pct, status
                End If
            End If
        End If
        On Error Goto 0
    End If
End Sub

Sub UpdateProgress(pct, status)
    document.getElementById("progressBar").style.width = pct & "%"
    document.getElementById("progressPercent").innerText = pct & "%"
    document.getElementById("progressStatus").innerText = status
End Sub

Sub ShowError(msg)
    document.getElementById("progressContainer").innerHTML = _
        "<div style='font-size:48px;color:#ef4444;margin-bottom:20px'>X</div>" & _
        "<div style='font-size:20px;color:#ef4444;margin-bottom:15px'>Creation Failed</div>" & _
        "<div class='error-box'>" & msg & "</div>" & _
        "<div class='btn-row' style='justify-content:center;margin-top:20px'>" & _
        "<button class='btn btn-secondary' onclick='GoToStep(1)'>Try Again</button></div>"
End Sub

Sub CloseApp()
    window.close()
End Sub
</script>
</head>
<body>
<div class="container">
    <div class="header">
        <div class="logo-icon">A</div>
        <div class="header-text">
            <h1>Aegis OS Media Creation Tool</h1>
            <p>Create bootable USB - Freemium Edition (FREE)</p>
        </div>
    </div>

    <div class="content">
        <div class="step-nav">
            <div class="step-item active"><div class="step-num">1</div><div class="step-label">Select USB</div></div>
            <div class="step-item"><div class="step-num">2</div><div class="step-label">Confirm</div></div>
            <div class="step-item"><div class="step-num">3</div><div class="step-label">Create</div></div>
            <div class="step-item"><div class="step-num">4</div><div class="step-label">Done</div></div>
        </div>

        <div id="step1" class="panel active">
            <div class="section-title">Select USB Drive</div>
            <div class="section-desc">Choose a USB drive with at least 4GB of space. All data will be erased.</div>

            <div class="info-box">
                <h3>What This Tool Does</h3>
                <ul>
                    <li>Downloads Aegis OS base system (~2.1 GB)</li>
                    <li>Formats your USB drive</li>
                    <li>Creates a bootable installation media</li>
                </ul>
            </div>

            <div id="driveList" class="drive-list"><div class="no-drives">Scanning for USB drives...</div></div>

            <div class="btn-row">
                <button class="btn btn-refresh" onclick="RefreshDrives()">Refresh</button>
                <div style="flex:1"></div>
                <button id="btnNext1" class="btn btn-primary" disabled onclick="GoToStep(2)">Next</button>
            </div>
        </div>

        <div id="step2" class="panel">
            <div class="section-title">Confirm Your Selection</div>
            <div class="section-desc">Review the details below before proceeding.</div>

            <div class="warning-box">
                <strong>Warning:</strong> All data on the selected USB drive will be permanently deleted!
            </div>

            <div class="info-box">
                <h3>Selected Drive</h3>
                <p id="selectedDriveInfo" style="font-size:16px;margin-top:8px;color:#fff">-</p>
            </div>

            <div class="info-box">
                <h3>What Will Be Created</h3>
                <ul>
                    <li>Edition: <strong style="color:#22d3ee">Aegis OS Freemium (FREE)</strong></li>
                    <li>Download Size: ~2.1 GB</li>
                    <li>Time Required: 10-30 minutes</li>
                </ul>
            </div>

            <div class="btn-row">
                <button class="btn btn-secondary" onclick="GoToStep(1)">Back</button>
                <div style="flex:1"></div>
                <button class="btn btn-primary" onclick="StartCreation()">Create Bootable USB</button>
            </div>
        </div>

        <div id="step3" class="panel">
            <div class="section-title">Creating Bootable USB</div>
            <div class="section-desc">Please wait while we create your Aegis OS installation media.</div>

            <div id="progressContainer" class="progress-container">
                <div class="progress-percent" id="progressPercent">0%</div>
                <div class="progress-bar-bg"><div class="progress-bar-fill" id="progressBar"></div></div>
                <div class="progress-status" id="progressStatus">Starting...</div>
            </div>

            <div class="warning-box" style="margin-top:20px">
                <strong>Do not remove the USB drive</strong> until complete.
            </div>
        </div>

        <div id="step4" class="panel">
            <div class="success-container">
                <div class="success-icon">&#10004;</div>
                <div class="success-title">USB Creation Complete!</div>
                <div class="success-desc">Your Aegis OS bootable USB drive is ready to use.</div>

                <div class="success-steps">
                    <h3>Next Steps:</h3>
                    <ol>
                        <li>Safely eject the USB drive from your computer</li>
                        <li>Insert it into the computer where you want to run Aegis OS</li>
                        <li>Restart and press F12, F2, DEL, or ESC to access boot menu</li>
                        <li>Select the USB drive to boot from</li>
                        <li>Choose "Try" to test or "Install" to install</li>
                    </ol>
                </div>

                <div class="btn-row" style="justify-content:center;margin-top:25px">
                    <button class="btn btn-primary" onclick="CloseApp()">Finish</button>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        Aegis OS - Commercial Software. Sold as-is. Liability limited to purchase price. Support available separately.
    </div>
</div>
</body>
</html>
