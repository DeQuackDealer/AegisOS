[Desktop Entry]
Version=2.0
Type=Application
Name=Aegis Mobile Link
GenericName=Phone Integration
Comment=Connect Android & iOS phones - SMS, notifications, screen mirroring, file transfer, and more
Exec=/usr/local/bin/aegis-mobile-link --gui
Icon=phone
Terminal=false
Categories=Utility;Network;
Keywords=phone;mobile;android;ios;kdeconnect;sms;notification;scrcpy;mirror;file;transfer;clipboard;battery;
StartupNotify=true
Actions=discover;status;

[Desktop Action discover]
Name=Discover Devices
Exec=/usr/local/bin/aegis-mobile-link --discover

[Desktop Action status]
Name=Show Status
Exec=/usr/local/bin/aegis-mobile-link --list
