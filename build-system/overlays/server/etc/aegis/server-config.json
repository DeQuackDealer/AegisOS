{
  "version": "1.5.0",
  "edition": "server",
  "description": "Aegis OS Server Edition Configuration",
  "tier": "server",
  "features": {
    "server_security": {
      "enabled": true,
      "xdr_enabled": true,
      "threat_intelligence": true,
      "ids_enabled": true,
      "firewall_advanced": true,
      "audit_logging": true,
      "compliance_monitoring": true
    },
    "load_balancer": {
      "enabled": true,
      "nginx_enabled": true,
      "haproxy_enabled": true,
      "auto_ssl": true,
      "health_checks": true,
      "session_persistence": true
    },
    "container_tools": {
      "enabled": true,
      "kubernetes_enabled": true,
      "docker_swarm": true,
      "podman_enabled": true,
      "registry_enabled": true
    },
    "backup_enterprise": {
      "enabled": true,
      "disaster_recovery": true,
      "automated_backup": true,
      "cross_site_replication": true,
      "retention_policies": true,
      "encryption_at_rest": true
    },
    "monitoring": {
      "enabled": true,
      "siem_enabled": true,
      "log_aggregation": true,
      "alerting": true,
      "dashboards": true,
      "metrics_retention_days": 90
    }
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/server",
    "log_dir": "/var/log/aegis",
    "backup_dir": "/var/backups/aegis"
  },
  "security": {
    "hardening_level": "high",
    "selinux_enforcing": true,
    "apparmor_enabled": true
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 500,
    "backup_count": 10
  }
}
