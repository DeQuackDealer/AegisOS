{
  "version": "1.5.0",
  "edition": "aidev",
  "description": "Aegis OS AI Developer Edition Configuration",
  "tier": "aidev",
  "features": {
    "ml_studio": {
      "enabled": true,
      "jupyter_lab": true,
      "jupyter_port": 8888,
      "vscode_extensions": ["ms-python.python", "ms-toolsai.jupyter", "GitHub.copilot"],
      "default_environment": "conda"
    },
    "model_hub": {
      "enabled": true,
      "huggingface_cache": "~/.cache/huggingface",
      "ollama_models_dir": "~/.ollama/models",
      "max_cache_size_gb": 100,
      "auto_download": false
    },
    "inference_engine": {
      "enabled": true,
      "llama_cpp_enabled": true,
      "onnx_enabled": true,
      "default_threads": 8,
      "gpu_layers": 35,
      "context_size": 4096
    },
    "gpu_tools": {
      "enabled": true,
      "cuda_enabled": true,
      "rocm_enabled": true,
      "multi_gpu": true,
      "power_management": true
    },
    "data_science": {
      "enabled": true,
      "conda_enabled": true,
      "environments": ["base", "ml", "nlp", "vision"],
      "default_packages": ["numpy", "pandas", "scikit-learn", "matplotlib"]
    },
    "llm_tools": {
      "enabled": true,
      "langchain_enabled": true,
      "vector_db": "chromadb",
      "embeddings_model": "sentence-transformers/all-MiniLM-L6-v2"
    }
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/aidev",
    "models_dir": "~/Models",
    "datasets_dir": "~/Datasets",
    "notebooks_dir": "~/Notebooks"
  },
  "gpu": {
    "nvidia_driver": "auto",
    "cuda_version": "12.1",
    "rocm_version": "5.7",
    "default_device": "cuda:0"
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 100,
    "backup_count": 5
  }
}
