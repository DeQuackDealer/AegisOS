{
  "version": "2.0.0",
  "edition": "aidev",
  "description": "Aegis OS AI Developer Edition Configuration",
  "tier": "aidev",
  "features": {
    "ml_studio": {
      "enabled": true,
      "jupyter_lab": true,
      "jupyter_port": 8888,
      "vscode_extensions": ["ms-python.python", "ms-toolsai.jupyter", "GitHub.copilot"],
      "default_environment": "conda",
      "deep_compute_integration": true
    },
    "compute_stack": {
      "enabled": true,
      "preferred_backend": "auto",
      "gpu_power_limit": 100,
      "enable_tensor_cores": true,
      "mixed_precision": "fp16",
      "multi_gpu_strategy": "data_parallel",
      "backends": {
        "cuda": true,
        "rocm": true,
        "vulkan": true,
        "opencl": true
      }
    },
    "training_optimizer": {
      "enabled": true,
      "default_precision": "fp16",
      "checkpoint_interval_minutes": 30,
      "max_checkpoints": 5,
      "auto_batch_size": true,
      "vram_buffer_percent": 10,
      "async_data_loading": true,
      "num_workers": 4,
      "prefetch_factor": 2,
      "gradient_accumulation": 1
    },
    "dataset_manager": {
      "enabled": true,
      "cache_enabled": true,
      "max_cache_size_gb": 50,
      "chunk_size_mb": 256,
      "prefetch_chunks": 2,
      "memory_map_threshold_mb": 100,
      "compression": "lz4",
      "num_workers": 4
    },
    "ai_monitor": {
      "enabled": true,
      "poll_interval_ms": 1000,
      "history_size": 1000,
      "alert_gpu_temp_c": 85,
      "alert_vram_percent": 95,
      "alert_gradient_threshold": 100,
      "log_metrics": true
    },
    "model_hub": {
      "enabled": true,
      "huggingface_cache": "~/.cache/huggingface",
      "ollama_models_dir": "~/.ollama/models",
      "max_cache_size_gb": 100,
      "auto_download": false
    },
    "inference_engine": {
      "enabled": true,
      "llama_cpp_enabled": true,
      "onnx_enabled": true,
      "default_threads": 8,
      "gpu_layers": 35,
      "context_size": 4096
    },
    "gpu_tools": {
      "enabled": true,
      "cuda_enabled": true,
      "rocm_enabled": true,
      "multi_gpu": true,
      "power_management": true
    },
    "data_science": {
      "enabled": true,
      "conda_enabled": true,
      "environments": ["base", "ml", "nlp", "vision"],
      "default_packages": ["numpy", "pandas", "scikit-learn", "matplotlib"]
    },
    "llm_tools": {
      "enabled": true,
      "langchain_enabled": true,
      "vector_db": "chromadb",
      "embeddings_model": "sentence-transformers/all-MiniLM-L6-v2"
    }
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/aidev",
    "models_dir": "~/Models",
    "datasets_dir": "~/Datasets",
    "notebooks_dir": "~/Notebooks",
    "checkpoints_dir": "/var/lib/aegis/checkpoints",
    "cache_dir": "/var/cache/aegis/datasets"
  },
  "gpu": {
    "nvidia_driver": "auto",
    "cuda_version": "12.1",
    "rocm_version": "5.7",
    "default_device": "cuda:0"
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 100,
    "backup_count": 5
  }
}
