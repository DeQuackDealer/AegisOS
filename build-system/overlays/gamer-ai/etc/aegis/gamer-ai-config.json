{
  "version": "1.5.0",
  "edition": "gamer-ai",
  "description": "Aegis OS Gamer AI Edition Configuration",
  "tier": "gamer-ai",
  "features": {
    "ai_gaming": {
      "enabled": true,
      "ai_companion": true,
      "real_time_translation": true,
      "voice_commands": true,
      "strategy_assistant": true
    },
    "neural_upscaling": {
      "enabled": true,
      "dlss_enabled": true,
      "fsr_enabled": true,
      "xess_enabled": true,
      "default_mode": "quality",
      "frame_generation": true
    },
    "ai_streaming": {
      "enabled": true,
      "ai_overlays": true,
      "sentiment_analysis": true,
      "chat_moderation": true,
      "auto_highlights": true
    },
    "game_modding": {
      "enabled": true,
      "texture_upscaling": true,
      "mod_manager": true,
      "auto_compatibility": true,
      "esrgan_enabled": true
    },
    "performance_ai": {
      "enabled": true,
      "ml_prediction": true,
      "auto_optimization": true,
      "frame_pacing": true,
      "thermal_management": true
    }
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/gamer-ai",
    "models_dir": "~/.aegis/ai-models",
    "mods_dir": "~/Games/Mods"
  },
  "gpu": {
    "prefer_dedicated": true,
    "ray_tracing": true,
    "variable_rate_shading": true
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 100
  }
}
