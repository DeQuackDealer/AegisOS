[Desktop Entry]
Name=Aegis Game Center
Comment=Unified game library across Steam, Lutris, Heroic, and more
GenericName=Game Library
Exec=/usr/local/bin/aegis-game-center --gui
Icon=applications-games
Terminal=false
Type=Application
Categories=Game;
Keywords=games;library;steam;lutris;heroic;gaming;launcher;
StartupNotify=true
StartupWMClass=aegis-game-center
Actions=scan;favorites;recent;

[Desktop Action scan]
Name=Scan for Games
Exec=/usr/local/bin/aegis-game-center --scan

[Desktop Action favorites]
Name=Show Favorites
Exec=/usr/local/bin/aegis-game-center --favorites

[Desktop Action recent]
Name=Recently Played
Exec=/usr/local/bin/aegis-game-center --recent
