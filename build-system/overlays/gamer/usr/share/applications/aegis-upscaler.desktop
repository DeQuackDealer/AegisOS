[Desktop Entry]
Name=Aegis Neural Upscaler
Comment=AI-powered upscaling technology for gaming - rivals DLSS/FSR
GenericName=Neural Upscaler
Exec=/usr/local/bin/aegis-upscaler --gui
Icon=video-display
Terminal=false
Type=Application
Categories=Game;Graphics;Settings;
Keywords=upscaler;dlss;fsr;ai;neural;gaming;graphics;performance;
StartupNotify=true
StartupWMClass=aegis-upscaler
Actions=cli;status;benchmark;profiles;

[Desktop Action cli]
Name=Open CLI Mode
Exec=xfce4-terminal -e "/usr/local/bin/aegis-upscaler"

[Desktop Action status]
Name=Show Status
Exec=xfce4-terminal -e "/usr/local/bin/aegis-upscaler status"

[Desktop Action benchmark]
Name=Run Benchmark
Exec=/usr/local/bin/aegis-upscaler benchmark

[Desktop Action profiles]
Name=Manage Profiles
Exec=/usr/local/bin/aegis-upscaler profile list
