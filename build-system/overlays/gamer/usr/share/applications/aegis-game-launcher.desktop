[Desktop Entry]
Name=Aegis Game Launcher
Comment=Comprehensive gaming platform for Aegis OS
GenericName=Game Launcher
Exec=/usr/local/bin/aegis-game-launcher --gui
Icon=applications-games
Terminal=false
Type=Application
Categories=Game;
Keywords=games;steam;lutris;wine;proton;gaming;
StartupNotify=true
StartupWMClass=aegis-game-launcher
Actions=cli;scan;favorites;

[Desktop Action cli]
Name=Open CLI Mode
Exec=xfce4-terminal -e "/usr/local/bin/aegis-game-launcher"

[Desktop Action scan]
Name=Scan for Games
Exec=/usr/local/bin/aegis-game-launcher scan

[Desktop Action favorites]
Name=Show Favorites
Exec=/usr/local/bin/aegis-game-launcher favorites
