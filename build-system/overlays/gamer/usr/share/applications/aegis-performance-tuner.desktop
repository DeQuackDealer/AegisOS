[Desktop Entry]
Name=Aegis Performance Tuner
Comment=System optimization for gaming performance
GenericName=Performance Optimizer
Exec=/usr/local/bin/aegis-performance-tuner --gui
Icon=preferences-system-performance
Terminal=false
Type=Application
Categories=Game;System;Settings;
Keywords=performance;gaming;cpu;gpu;optimization;tuning;gamemode;
StartupNotify=true
StartupWMClass=aegis-performance-tuner
Actions=gaming;balanced;powersave;

[Desktop Action gaming]
Name=Apply Gaming Profile
Exec=/usr/local/bin/aegis-performance-tuner --gaming

[Desktop Action balanced]
Name=Apply Balanced Profile
Exec=/usr/local/bin/aegis-performance-tuner --balanced

[Desktop Action powersave]
Name=Apply Power Save Profile
Exec=/usr/local/bin/aegis-performance-tuner --powersave
