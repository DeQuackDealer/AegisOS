[Unit]
Description=Aegis VRAM Heatmap Balancer - Intelligent GPU Memory Management
Documentation=https://aegis-os.com/docs/vram-balancer
After=local-fs.target graphical.target

[Service]
Type=simple
ExecStart=/usr/local/bin/aegis-vram-balancer
Restart=always
RestartSec=5
Nice=-5

ProtectSystem=strict
ReadWritePaths=/var/lib/aegis /var/log/aegis /sys

[Install]
WantedBy=graphical.target
