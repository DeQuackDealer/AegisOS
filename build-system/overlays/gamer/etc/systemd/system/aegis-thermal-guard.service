[Unit]
Description=Aegis Thermal Guard - Smart Temperature Management
Documentation=https://aegis-os.com/docs/thermal-guard
After=multi-user.target

[Service]
Type=simple
ExecStart=/usr/local/bin/aegis-thermal-guard
Restart=on-failure
RestartSec=5
Nice=-5
AmbientCapabilities=CAP_SYS_RAWIO

[Install]
WantedBy=multi-user.target
