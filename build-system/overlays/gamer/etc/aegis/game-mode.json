{
  "version": "1.0.0",
  "game_mode": {
    "enabled": true,
    "auto_start": false,
    "use_gamescope": true,
    "resolution": {
      "width": 1920,
      "height": 1080
    },
    "fullscreen": true
  },
  "game_sources": {
    "steam": {
      "enabled": true,
      "paths": [
        "~/.steam/steam/steamapps",
        "~/.local/share/Steam/steamapps"
      ]
    },
    "lutris": {
      "enabled": true,
      "database": "~/.local/share/lutris/pga.db"
    },
    "heroic": {
      "enabled": true,
      "config_path": "~/.config/heroic"
    },
    "native": {
      "enabled": true,
      "scan_desktop_files": true
    }
  },
  "ui": {
    "theme": "dark",
    "show_source_badge": true,
    "show_playtime": true,
    "grid_size": "medium",
    "animations": true
  },
  "controller": {
    "enabled": true,
    "guide_button_action": "toggle_mode",
    "long_press_timeout": 2000
  },
  "performance": {
    "enable_gamemode": true,
    "mangohud_default": false,
    "gpu_performance_mode": "auto"
  }
}
