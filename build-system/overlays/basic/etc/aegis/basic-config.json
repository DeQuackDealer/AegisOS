{
  "version": "1.5.0",
  "edition": "basic",
  "description": "Aegis OS Basic Edition Configuration",
  "tier": "basic",
  "features": {
    "security_suite": {
      "enabled": true,
      "clamav_enabled": true,
      "clamav_realtime_scan": false,
      "clamav_scheduled_scan": true,
      "clamav_scan_schedule": "daily",
      "ufw_enabled": true,
      "ufw_default_policy": "deny",
      "fail2ban_enabled": true,
      "fail2ban_max_retry": 5,
      "encrypted_folders_enabled": true,
      "encrypted_folders_path": "~/Private"
    },
    "backup_suite": {
      "enabled": true,
      "scheduled_backups": true,
      "backup_schedule": "weekly",
      "backup_location": "~/Backups",
      "cloud_backup_gb": 10,
      "restore_points_enabled": true,
      "max_restore_points": 5,
      "compression": "zstd",
      "incremental": true
    },
    "media_suite": {
      "enabled": true,
      "vlc_custom_config": true,
      "handbrake_presets": true,
      "screen_recorder_enabled": true,
      "podcast_manager": true,
      "audio_editor": false
    },
    "customization": {
      "enabled": true,
      "themes_count": 100,
      "icon_packs_count": 50,
      "widgets_enabled": true,
      "custom_wallpapers": true,
      "desktop_layouts": 10
    },
    "productivity": {
      "enabled": true,
      "clipboard_manager": true,
      "clipboard_history_size": 100,
      "window_tiling": true,
      "quick_launcher": true,
      "quick_launcher_shortcut": "Super+Space"
    }
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/basic",
    "log_dir": "/var/log/aegis",
    "user_config_dir": "~/.config/aegis"
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 10,
    "backup_count": 3
  }
}
