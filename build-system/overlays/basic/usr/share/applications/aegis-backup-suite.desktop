[Desktop Entry]
Name=Aegis Backup Suite
Comment=Scheduled backups with restore points and cloud sync
GenericName=Backup Manager
Exec=/usr/local/bin/aegis-backup-suite --gui
Icon=drive-harddisk
Terminal=false
Type=Application
Categories=System;Utility;Archiving;
Keywords=backup;restore;archive;sync;cloud;
StartupNotify=true
StartupWMClass=aegis-backup-suite
Actions=backup-now;restore;

[Desktop Action backup-now]
Name=Backup Now
Exec=/usr/local/bin/aegis-backup-suite --backup quick_backup

[Desktop Action restore]
Name=Restore from Backup
Exec=/usr/local/bin/aegis-backup-suite --gui
