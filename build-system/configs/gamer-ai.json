{
  "edition": "gamer-ai",
  "name": "Aegis OS Gamer + AI",
  "version": "1.0.0",
  "description": "Combined gaming and AI development edition",
  "base_system": "ubuntu-22.04-minimal",
  "kernel": "linux-lowlatency-hwe-22.04",
  "desktop_environment": "xfce4",
  "packages": {
    "system": [
      "systemd", "systemd-sysv", "systemd-timesyncd",
      "network-manager", "network-manager-gnome",
      "linux-firmware", "linux-modules-extra",
      "gamemode", "mangohud"
    ],
    "desktop": [
      "xfce4", "xfce4-terminal", "xfce4-panel",
      "xfce4-session", "xfce4-settings", "xfce4-appfinder",
      "xfce4-power-manager", "xfce4-screenshooter",
      "thunar", "thunar-volman", "thunar-archive-plugin",
      "lightdm", "lightdm-gtk-greeter"
    ],
    "applications": [
      "firefox", "thunderbird",
      "mousepad", "ristretto",
      "file-roller", "gnome-calculator"
    ],
    "gaming": [
      "steam", "steam-installer",
      "lutris", "wine", "wine64",
      "proton-ge-custom",
      "vulkan-tools", "vulkan-validationlayers",
      "mesa-vulkan-drivers", "mesa-utils"
    ],
    "emulators": [
      "retroarch", "dolphin-emu", "pcsx2",
      "ppsspp", "dosbox-x", "scummvm"
    ],
    "development": [
      "build-essential", "cmake", "ninja-build",
      "python3", "python3-pip", "python3-venv",
      "nodejs", "npm",
      "git", "docker.io", "docker-compose"
    ],
    "ai_ml": [
      "python3-numpy", "python3-scipy",
      "python3-pandas", "python3-matplotlib"
    ],
    "ides": [
      "code", "jupyter-notebook"
    ],
    "streaming": [
      "obs-studio", "discord"
    ],
    "utilities": [
      "vim", "nano", "htop", "fastfetch",
      "wget", "curl", "git",
      "gparted", "synaptic",
      "corectrl"
    ],
    "multimedia": [
      "pulseaudio", "pavucontrol",
      "gstreamer1.0-plugins-base",
      "gstreamer1.0-plugins-good",
      "gstreamer1.0-plugins-bad"
    ]
  },
  "remove_packages": [
    "snapd", "cloud-init"
  ],
  "services": {
    "enable": ["lightdm", "NetworkManager", "docker", "gamemode"],
    "disable": ["cups"]
  },
  "customization": {
    "theme": "Arc-Dark",
    "icons": "Papirus",
    "wallpaper": "/usr/share/backgrounds/aegis-gamer-ai.jpg",
    "default_apps": {
      "browser": "firefox",
      "editor": "code",
      "terminal": "xfce4-terminal"
    }
  },
  "iso": {
    "size_mb": 8000,
    "compression": "xz",
    "boot_mode": ["bios", "uefi"],
    "installer": "calamares"
  }
}