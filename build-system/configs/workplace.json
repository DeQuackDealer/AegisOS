
{
  "edition": "workplace",
  "name": "Aegis OS Workplace",
  "version": "1.0.0",
  "description": "Business collaboration edition with enterprise features",
  "base_system": "ubuntu-22.04-desktop",
  "kernel": "linux-generic-hwe-22.04",
  "desktop_environment": "xfce4",
  "packages": {
    "system": [
      "systemd", "systemd-sysv", "systemd-timesyncd",
      "network-manager", "network-manager-gnome",
      "linux-firmware", "linux-modules-extra"
    ],
    "desktop": [
      "xfce4", "xfce4-terminal", "xfce4-panel",
      "xfce4-session", "xfce4-settings", "xfce4-appfinder",
      "xfce4-power-manager", "xfce4-screenshooter",
      "thunar", "thunar-volman", "thunar-archive-plugin",
      "lightdm", "lightdm-gtk-greeter"
    ],
    "office": [
      "libreoffice", "libreoffice-calc",
      "libreoffice-writer", "libreoffice-impress",
      "thunderbird", "evolution",
      "gnucash", "kmymoney"
    ],
    "collaboration": [
      "slack", "discord", "zoom",
      "teams", "skype", "telegram-desktop",
      "signal-desktop", "element-desktop"
    ],
    "development": [
      "build-essential", "git", "python3",
      "nodejs", "npm", "code"
    ],
    "security": [
      "gufw", "firewalld", "clamav",
      "keepassxc", "bitwarden"
    ],
    "utilities": [
      "vim", "nano", "htop", "neofetch",
      "wget", "curl", "git",
      "gparted", "synaptic"
    ],
    "multimedia": [
      "pulseaudio", "pavucontrol",
      "gstreamer1.0-plugins-base",
      "gstreamer1.0-plugins-good"
    ]
  },
  "remove_packages": [
    "snapd", "cloud-init"
  ],
  "services": {
    "enable": ["lightdm", "NetworkManager"],
    "disable": ["bluetooth", "cups"]
  },
  "customization": {
    "theme": "Arc-Darker",
    "icons": "Papirus-Dark",
    "wallpaper": "/usr/share/backgrounds/aegis-workplace.jpg",
    "default_apps": {
      "browser": "firefox",
      "editor": "code",
      "terminal": "xfce4-terminal"
    }
  },
  "iso": {
    "size_mb": 4000,
    "compression": "xz",
    "boot_mode": ["bios", "uefi"],
    "installer": "calamares"
  },
  "license": {
    "type": "commercial",
    "price": "$49",
    "activation": "online"
  }
}
