{
  "edition": "freemium",
  "name": "Aegis OS Freemium",
  "version": "1.0.0",
  "description": "Free edition with basic Linux desktop environment",
  "base_system": "ubuntu-22.04-minimal",
  "kernel": "linux-generic-hwe-22.04",
  "desktop_environment": "xfce4",
  "packages": {
    "system": [
      "systemd", "systemd-sysv", "systemd-timesyncd",
      "network-manager", "network-manager-gnome",
      "linux-firmware", "linux-modules-extra"
    ],
    "desktop": [
      "xfce4", "xfce4-terminal", "xfce4-panel",
      "xfce4-session", "xfce4-settings", "xfce4-appfinder",
      "xfce4-power-manager", "xfce4-screenshooter",
      "thunar", "thunar-volman", "thunar-archive-plugin",
      "lightdm", "lightdm-gtk-greeter"
    ],
    "applications": [
      "firefox", "thunderbird",
      "mousepad", "ristretto",
      "file-roller", "gnome-calculator"
    ],
    "utilities": [
      "vim", "nano", "htop", "neofetch",
      "wget", "curl", "git",
      "gparted", "synaptic"
    ],
    "multimedia": [
      "pulseaudio", "pavucontrol",
      "gstreamer1.0-plugins-base",
      "gstreamer1.0-plugins-good"
    ]
  },
  "remove_packages": [
    "snapd", "cloud-init"
  ],
  "services": {
    "enable": ["lightdm", "NetworkManager"],
    "disable": ["bluetooth", "cups"]
  },
  "customization": {
    "theme": "Arc-Dark",
    "icons": "Papirus",
    "wallpaper": "/usr/share/backgrounds/aegis-freemium.jpg",
    "default_apps": {
      "browser": "firefox",
      "editor": "mousepad",
      "terminal": "xfce4-terminal"
    }
  },
  "iso": {
    "size_mb": 1500,
    "compression": "xz",
    "boot_mode": ["bios", "uefi"],
    "installer": "calamares"
  }
}