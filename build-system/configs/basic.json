{
  "edition": "basic",
  "name": "Aegis OS Basic",
  "version": "1.0.0",
  "description": "Professional edition with 500+ applications",
  "base_system": "ubuntu-22.04-desktop",
  "kernel": "linux-generic-hwe-22.04",
  "desktop_environment": "xfce4",
  "packages": {
    "inherit_from": "freemium",
    "development": [
      "build-essential", "cmake", "automake", "autoconf",
      "gcc", "g++", "clang", "llvm",
      "python3", "python3-pip", "python3-venv",
      "nodejs", "npm", "yarn",
      "golang", "rustc", "cargo",
      "openjdk-17-jdk", "maven", "gradle",
      "php", "composer",
      "ruby", "ruby-dev",
      "perl", "perl-doc",
      "docker.io", "docker-compose",
      "git", "git-flow", "subversion", "mercurial"
    ],
    "editors": [
      "vim", "emacs", "nano",
      "code", "sublime-text",
      "atom", "brackets",
      "gedit", "kate", "geany"
    ],
    "office": [
      "libreoffice", "libreoffice-calc",
      "libreoffice-writer", "libreoffice-impress",
      "thunderbird", "evolution",
      "gnucash", "kmymoney"
    ],
    "graphics": [
      "gimp", "inkscape", "krita",
      "blender", "freecad",
      "darktable", "rawtherapee",
      "scribus", "digikam"
    ],
    "multimedia": [
      "vlc", "mpv", "smplayer",
      "audacity", "ardour",
      "kdenlive", "openshot",
      "obs-studio", "simplescreenrecorder",
      "handbrake", "ffmpeg"
    ],
    "internet": [
      "firefox", "chromium-browser",
      "transmission-gtk", "qbittorrent",
      "filezilla", "remmina",
      "hexchat", "pidgin",
      "telegram-desktop", "signal-desktop"
    ],
    "system_tools": [
      "gparted", "gnome-disk-utility",
      "synaptic", "software-properties-gtk",
      "bleachbit", "stacer",
      "timeshift", "backintime",
      "virtualbox", "qemu", "virt-manager"
    ],
    "security": [
      "gufw", "firewalld",
      "clamav", "clamtk",
      "rkhunter", "chkrootkit",
      "lynis", "aide",
      "keepassxc", "bitwarden"
    ],
    "databases": [
      "postgresql", "postgresql-client",
      "mysql-server", "mysql-workbench",
      "sqlite3", "sqlitebrowser",
      "mongodb", "mongodb-compass",
      "redis-server", "redis-tools"
    ],
    "servers": [
      "apache2", "nginx",
      "openssh-server", "vsftpd",
      "samba", "nfs-kernel-server"
    ]
  },
  "remove_packages": [
    "snapd", "cloud-init", "ubuntu-advantage-tools"
  ],
  "services": {
    "enable": ["docker", "ssh", "firewalld"],
    "disable": ["bluetooth", "cups", "avahi-daemon"]
  },
  "customization": {
    "theme": "Arc-Darker",
    "icons": "Papirus-Dark",
    "wallpaper": "/usr/share/backgrounds/aegis-basic.jpg",
    "default_apps": {
      "browser": "firefox",
      "editor": "code",
      "terminal": "tilix",
      "file_manager": "thunar"
    }
  },
  "iso": {
    "size_mb": 3500,
    "compression": "xz",
    "boot_mode": ["bios", "uefi"],
    "installer": "calamares"
  },
  "license": {
    "type": "commercial",
    "price": "$69",
    "activation": "online"
  }
}