<?xml version="1.0" encoding="UTF-8"?>
<!--
  Aegis OS - XFCE Keyboard Shortcuts Configuration
  Windows-inspired keyboard shortcuts with Aegis enhancements
  Version: 1.0.0
  
  Key Bindings:
    - F11: Toggle fullscreen mode
    - Super+D: Show desktop (minimize all windows)
    - Super+E: Open file manager (Thunar)
    - Print: Take screenshot (full screen)
    - Alt+Print: Take screenshot (active window)
    - Shift+Print: Take screenshot (region selection)
    - Super+L: Lock screen
    - Super+R: Application launcher (run dialog)
    - Super+Tab: Switch windows (task switcher)
    - Ctrl+Alt+Delete: Session logout dialog
    - Ctrl+Alt+T: Open terminal
    - Super+Up: Maximize window
    - Super+Down: Minimize/Restore window
    - Super+Left: Tile window left
    - Super+Right: Tile window right
-->
<channel name="xfce4-keyboard-shortcuts" version="1.0">
  <property name="commands" type="empty">
    <property name="custom" type="empty">
      
      <!-- Fullscreen Toggle (F11) -->
      <property name="F11" type="string" value="aegis-fullscreen-toggle"/>
      
      <!-- Show Desktop (Super+D) -->
      <property name="&lt;Super&gt;d" type="string" value="xfdesktop --minimize-all"/>
      
      <!-- File Manager (Super+E) -->
      <property name="&lt;Super&gt;e" type="string" value="thunar"/>
      
      <!-- Screenshot - Full Screen (Print) -->
      <property name="Print" type="string" value="xfce4-screenshooter -f"/>
      
      <!-- Screenshot - Active Window (Alt+Print) -->
      <property name="&lt;Alt&gt;Print" type="string" value="xfce4-screenshooter -w"/>
      
      <!-- Screenshot - Region Selection (Shift+Print) -->
      <property name="&lt;Shift&gt;Print" type="string" value="xfce4-screenshooter -r"/>
      
      <!-- Lock Screen (Super+L) -->
      <property name="&lt;Super&gt;l" type="string" value="xflock4"/>
      
      <!-- Run Dialog / Application Launcher (Super+R) -->
      <property name="&lt;Super&gt;r" type="string" value="xfce4-appfinder --collapsed"/>
      
      <!-- Terminal (Ctrl+Alt+T) -->
      <property name="&lt;Primary&gt;&lt;Alt&gt;t" type="string" value="xfce4-terminal"/>
      
      <!-- Session Logout Dialog (Ctrl+Alt+Delete) -->
      <property name="&lt;Primary&gt;&lt;Alt&gt;Delete" type="string" value="xfce4-session-logout"/>
      
      <!-- Application Finder (F3) -->
      <property name="F3" type="string" value="xfce4-appfinder"/>
      
      <!-- Settings Manager (Super+I) -->
      <property name="&lt;Super&gt;i" type="string" value="xfce4-settings-manager"/>
      
      <!-- Volume Control -->
      <property name="XF86AudioRaiseVolume" type="string" value="pactl set-sink-volume @DEFAULT_SINK@ +5%"/>
      <property name="XF86AudioLowerVolume" type="string" value="pactl set-sink-volume @DEFAULT_SINK@ -5%"/>
      <property name="XF86AudioMute" type="string" value="pactl set-sink-mute @DEFAULT_SINK@ toggle"/>
      <property name="XF86AudioMicMute" type="string" value="pactl set-source-mute @DEFAULT_SOURCE@ toggle"/>
      
      <!-- Media Keys -->
      <property name="XF86AudioPlay" type="string" value="playerctl play-pause"/>
      <property name="XF86AudioPause" type="string" value="playerctl pause"/>
      <property name="XF86AudioNext" type="string" value="playerctl next"/>
      <property name="XF86AudioPrev" type="string" value="playerctl previous"/>
      <property name="XF86AudioStop" type="string" value="playerctl stop"/>
      
      <!-- Brightness Control -->
      <property name="XF86MonBrightnessUp" type="string" value="xbacklight -inc 10"/>
      <property name="XF86MonBrightnessDown" type="string" value="xbacklight -dec 10"/>
      
      <!-- Aegis-specific shortcuts -->
      <property name="&lt;Super&gt;w" type="string" value="aegis-wallpaper-manager"/>
      <property name="&lt;Super&gt;t" type="string" value="aegis-theme-manager"/>
      <property name="&lt;Super&gt;s" type="string" value="aegis-system-info"/>
      
      <!-- Quick Launch Applications -->
      <property name="&lt;Super&gt;b" type="string" value="firefox"/>
      <property name="&lt;Super&gt;c" type="string" value="xfce4-terminal --drop-down"/>
      
    </property>
    
    <property name="default" type="empty">
      <property name="&lt;Alt&gt;F1" type="string" value="xfce4-popup-whiskermenu"/>
      <property name="&lt;Alt&gt;F2" type="string" value="xfce4-appfinder --collapsed"/>
      <property name="&lt;Alt&gt;F3" type="string" value="xfce4-appfinder"/>
      <property name="&lt;Super&gt;p" type="string" value="xfce4-display-settings --minimal"/>
    </property>
  </property>
  
  <property name="xfwm4" type="empty">
    <property name="custom" type="empty">
      
      <!-- Window Management -->
      <property name="&lt;Super&gt;Up" type="string" value="maximize_window_key"/>
      <property name="&lt;Super&gt;Down" type="string" value="hide_window_key"/>
      <property name="&lt;Super&gt;Left" type="string" value="tile_left_key"/>
      <property name="&lt;Super&gt;Right" type="string" value="tile_right_key"/>
      
      <!-- Alt+Tab Window Switching -->
      <property name="&lt;Alt&gt;Tab" type="string" value="cycle_windows_key"/>
      <property name="&lt;Alt&gt;&lt;Shift&gt;Tab" type="string" value="cycle_reverse_windows_key"/>
      <property name="&lt;Super&gt;Tab" type="string" value="switch_window_key"/>
      
      <!-- Close Window -->
      <property name="&lt;Alt&gt;F4" type="string" value="close_window_key"/>
      
      <!-- Move/Resize Windows -->
      <property name="&lt;Alt&gt;F7" type="string" value="move_window_key"/>
      <property name="&lt;Alt&gt;F8" type="string" value="resize_window_key"/>
      
      <!-- Workspace Navigation -->
      <property name="&lt;Primary&gt;&lt;Alt&gt;Right" type="string" value="right_workspace_key"/>
      <property name="&lt;Primary&gt;&lt;Alt&gt;Left" type="string" value="left_workspace_key"/>
      <property name="&lt;Primary&gt;&lt;Alt&gt;Up" type="string" value="up_workspace_key"/>
      <property name="&lt;Primary&gt;&lt;Alt&gt;Down" type="string" value="down_workspace_key"/>
      
      <!-- Move Window to Workspace -->
      <property name="&lt;Primary&gt;&lt;Shift&gt;&lt;Alt&gt;Right" type="string" value="move_window_right_workspace_key"/>
      <property name="&lt;Primary&gt;&lt;Shift&gt;&lt;Alt&gt;Left" type="string" value="move_window_left_workspace_key"/>
      
      <!-- Window Decorations -->
      <property name="&lt;Alt&gt;F11" type="string" value="fullscreen_key"/>
      <property name="&lt;Alt&gt;F9" type="string" value="hide_window_key"/>
      <property name="&lt;Alt&gt;F10" type="string" value="maximize_window_key"/>
      
      <!-- Shade Window (Roll up to title bar) -->
      <property name="&lt;Alt&gt;F12" type="string" value="shade_window_key"/>
      
      <!-- Stick Window (Show on all workspaces) -->
      <property name="&lt;Alt&gt;F5" type="string" value="stick_window_key"/>
      
      <!-- Window Menu -->
      <property name="&lt;Alt&gt;space" type="string" value="popup_menu_key"/>
      
      <!-- Show Desktop -->
      <property name="&lt;Primary&gt;&lt;Alt&gt;d" type="string" value="show_desktop_key"/>
      
      <!-- Focus Navigation -->
      <property name="&lt;Alt&gt;Escape" type="string" value="cycle_windows_key"/>
      <property name="Escape" type="string" value="cancel_key"/>
      
      <!-- Snap Windows -->
      <property name="&lt;Super&gt;&lt;Shift&gt;Left" type="string" value="tile_up_left_key"/>
      <property name="&lt;Super&gt;&lt;Shift&gt;Right" type="string" value="tile_up_right_key"/>
      <property name="&lt;Primary&gt;&lt;Super&gt;Left" type="string" value="tile_down_left_key"/>
      <property name="&lt;Primary&gt;&lt;Super&gt;Right" type="string" value="tile_down_right_key"/>
      
    </property>
    
    <property name="default" type="empty">
      <property name="&lt;Alt&gt;Insert" type="string" value="add_workspace_key"/>
      <property name="&lt;Alt&gt;Delete" type="string" value="del_workspace_key"/>
    </property>
  </property>
  
  <property name="providers" type="array">
    <value type="string" value="xfwm4"/>
    <value type="string" value="commands"/>
  </property>
</channel>
