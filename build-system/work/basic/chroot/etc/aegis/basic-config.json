{
  "version": "2.0.0",
  "edition": "basic",
  "description": "Aegis OS Basic Edition - Productivity-focused Linux (NO Gaming)",
  "tier": "basic",
  "edition_type": "productivity",
  "gaming_enabled": false,
  "features": {
    "office_suite": {
      "enabled": true,
      "libreoffice_full": true,
      "libreoffice_components": ["writer", "calc", "impress", "draw", "base", "math"],
      "pdf_tools": true,
      "document_templates": true
    },
    "video_conferencing": {
      "enabled": true,
      "jitsi_support": true,
      "zoom_support": true,
      "teams_support": true,
      "skype_support": true
    },
    "creative_tools": {
      "enabled": true,
      "gimp": true,
      "inkscape": true,
      "kdenlive": true,
      "shotcut": true,
      "shotwell": true
    },
    "communication": {
      "enabled": true,
      "email_clients": ["thunderbird", "evolution", "geary"],
      "browsers": ["firefox", "chromium"],
      "messaging": ["telegram", "signal", "element"]
    },
    "cloud_storage": {
      "enabled": true,
      "nextcloud": true,
      "syncthing": true,
      "rclone": true,
      "owncloud": true
    },
    "security_suite": {
      "enabled": true,
      "clamav_enabled": true,
      "clamav_realtime_scan": false,
      "clamav_scheduled_scan": true,
      "clamav_scan_schedule": "daily",
      "ufw_enabled": true,
      "ufw_default_policy": "deny",
      "fail2ban_enabled": false,
      "encrypted_folders_enabled": true,
      "encrypted_folders_path": "~/Private"
    },
    "backup_suite": {
      "enabled": true,
      "scheduled_backups": true,
      "backup_schedule": "weekly",
      "backup_location": "~/Backups",
      "cloud_backup_gb": 10,
      "restore_points_enabled": true,
      "max_restore_points": 5,
      "compression": "zstd",
      "incremental": true,
      "tools": ["deja-dup", "timeshift", "rsync"]
    },
    "media_suite": {
      "enabled": true,
      "vlc": true,
      "rhythmbox": true,
      "audacious": true,
      "screen_capture": true
    },
    "customization": {
      "enabled": true,
      "themes_count": 100,
      "icon_packs_count": 50,
      "widgets_enabled": true,
      "custom_wallpapers": true,
      "desktop_layouts": 10
    },
    "productivity": {
      "enabled": true,
      "clipboard_manager": true,
      "clipboard_history_size": 100,
      "window_tiling": true,
      "quick_launcher": true,
      "quick_launcher_shortcut": "Super+Space",
      "note_taking": true,
      "task_management": true
    },
    "system_care": {
      "enabled": true,
      "cleanup_tool": true,
      "update_checker": true,
      "disk_management": true,
      "performance_tips": true
    },
    "getting_started": {
      "enabled": true,
      "welcome_wizard": true,
      "feature_tour": true,
      "help_resources": true,
      "auto_run_first_login": true
    }
  },
  "excluded_features": {
    "gaming": {
      "steam": false,
      "lutris": false,
      "wine_gaming": false,
      "gamemode": false,
      "gamescope": false,
      "mangohud": false,
      "emulators": false,
      "retroarch": false,
      "game_controllers": false,
      "streaming_obs": false
    },
    "gaming_note": "Gaming features are NOT included in Basic edition. Upgrade to Gamer edition for Steam, Lutris, emulators, and gaming optimizations."
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/basic",
    "log_dir": "/var/log/aegis",
    "user_config_dir": "~/.config/aegis",
    "packages_list": "/etc/aegis/basic-packages.list"
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 10,
    "backup_count": 3
  },
  "autostart": {
    "aegis-getting-started": {
      "enabled": true,
      "condition": "first_login"
    }
  }
}
