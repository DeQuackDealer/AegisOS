[Desktop Entry]
Name=Aegis Productivity
Comment=Clipboard manager, window tiling, and quick launcher
GenericName=Productivity Tools
Exec=/usr/local/bin/aegis-productivity --gui
Icon=applications-office
Terminal=false
Type=Application
Categories=Utility;
Keywords=clipboard;tiling;launcher;productivity;
StartupNotify=true
StartupWMClass=aegis-productivity
Actions=launcher;clipboard;

[Desktop Action launcher]
Name=Quick Launcher
Exec=/usr/local/bin/aegis-productivity --gui

[Desktop Action clipboard]
Name=Clipboard History
Exec=/usr/local/bin/aegis-productivity --clipboard-history
