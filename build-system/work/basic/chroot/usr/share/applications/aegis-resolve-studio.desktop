[Desktop Entry]
Version=1.0
Type=Application
Name=Aegis Resolve Studio
GenericName=Video Editor Manager
Comment=DaVinci Resolve manager and enhancer with GPU optimization
Exec=aegis-resolve-studio --gui
Icon=davinci-resolve
Terminal=false
Categories=AudioVideo;Video;AudioVideoEditing;
Keywords=resolve;davinci;video;editing;color;grading;gpu;cuda;rocm;
StartupNotify=true
StartupWMClass=aegis-resolve-studio
MimeType=video/mp4;video/x-matroska;video/quicktime;video/x-msvideo;video/webm;
Actions=Launch;Status;GPUConfig;ClearCache;

[Desktop Action Launch]
Name=Launch DaVinci Resolve
Exec=aegis-resolve-studio --launch

[Desktop Action Status]
Name=Check Status
Exec=aegis-resolve-studio --status

[Desktop Action GPUConfig]
Name=Auto GPU Configuration
Exec=aegis-resolve-studio --auto-config

[Desktop Action ClearCache]
Name=Clear Media Cache
Exec=aegis-resolve-studio --clear-cache
