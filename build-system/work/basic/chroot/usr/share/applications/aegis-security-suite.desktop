[Desktop Entry]
Name=Aegis Security Suite
Comment=Comprehensive security management with ClamAV, UFW, and Fail2ban
GenericName=Security Center
Exec=/usr/local/bin/aegis-security-suite --gui
Icon=security-high
Terminal=false
Type=Application
Categories=System;Security;
Keywords=security;antivirus;firewall;clamav;ufw;fail2ban;
StartupNotify=true
StartupWMClass=aegis-security-suite
Actions=scan;status;

[Desktop Action scan]
Name=Run Quick Scan
Exec=/usr/local/bin/aegis-security-suite --scan /home

[Desktop Action status]
Name=Show Security Status
Exec=xfce4-terminal -e "/usr/local/bin/aegis-security-suite --status"
