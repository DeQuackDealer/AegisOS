[Desktop Entry]
Name=Aegis Customization
Comment=Desktop themes, icons, and layout customization
GenericName=Desktop Customization
Exec=/usr/local/bin/aegis-customization --gui
Icon=preferences-desktop-theme
Terminal=false
Type=Application
Categories=Settings;DesktopSettings;
Keywords=theme;icons;wallpaper;customization;appearance;
StartupNotify=true
StartupWMClass=aegis-customization
Actions=themes;icons;

[Desktop Action themes]
Name=Browse Themes
Exec=/usr/local/bin/aegis-customization --list-themes

[Desktop Action icons]
Name=Browse Icon Packs
Exec=/usr/local/bin/aegis-customization --list-icons
