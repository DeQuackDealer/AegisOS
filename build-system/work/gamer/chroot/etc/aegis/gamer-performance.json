{
  "version": "1.5.0",
  "description": "Aegis OS Gamer Performance Configuration",
  "active_preset": "balanced",
  "custom_settings": {},
  "last_applied": null,
  "tier": "gamer",
  "presets": {
    "balanced": {
      "enabled": true,
      "default": true
    },
    "performance": {
      "enabled": true,
      "default": false
    },
    "battery_saver": {
      "enabled": true,
      "default": false
    },
    "stream_mode": {
      "enabled": true,
      "default": false
    },
    "esports": {
      "enabled": true,
      "default": false
    }
  },
  "proton_versions": [],
  "wine_prefixes": [
    {
      "name": "default",
      "path": "/home/aegis/.wine",
      "arch": "win64"
    }
  ],
  "gamemode_presets": {
    "default": {
      "desiredgov": "performance",
      "softrealtime": "auto",
      "renice": 0,
      "ioprio": "0",
      "gpu_opt": 1
    },
    "esports": {
      "desiredgov": "performance",
      "softrealtime": "on",
      "renice": -10,
      "ioprio": "1",
      "gpu_opt": 1
    },
    "streaming": {
      "desiredgov": "schedutil",
      "softrealtime": "off",
      "renice": 0,
      "ioprio": "2",
      "gpu_opt": 0
    }
  },
  "gpu_custom_curves": {
    "nvidia_aggressive": {
      "enabled": false,
      "points": [
        {"temp": 30, "speed": 30},
        {"temp": 50, "speed": 50},
        {"temp": 70, "speed": 80},
        {"temp": 85, "speed": 100}
      ]
    },
    "amd_aggressive": {
      "enabled": false,
      "points": [
        {"temp": 30, "speed": 25},
        {"temp": 50, "speed": 45},
        {"temp": 70, "speed": 75},
        {"temp": 85, "speed": 100}
      ]
    }
  },
  "fsr_settings": {
    "enabled": false,
    "sharpness": 0.5,
    "mode": "ultra_quality"
  },
  "vrr_settings": {
    "enabled": true,
    "min_refresh": 48,
    "max_refresh": 165
  },
  "network_profiles": {
    "standard": {
      "tcp_congestion": "cubic",
      "buffer_size": "default"
    },
    "gaming": {
      "tcp_congestion": "bbr",
      "buffer_size": "large",
      "low_latency": true
    },
    "esports": {
      "tcp_congestion": "bbr",
      "buffer_size": "medium",
      "low_latency": true,
      "disable_nagle": true
    },
    "streaming": {
      "tcp_congestion": "bbr",
      "buffer_size": "xlarge",
      "low_latency": false
    }
  },
  "memory_settings": {
    "zram_enabled": true,
    "zram_size_percent": 50,
    "zram_algorithm": "zstd",
    "swappiness": 10,
    "drop_caches_on_game_launch": false
  },
  "logging": {
    "enabled": true,
    "log_file": "/var/log/aegis/performance.log",
    "log_level": "INFO",
    "max_size_mb": 10,
    "backup_count": 3
  },
  "tier_features": {
    "freemium": [
      "basic_presets",
      "cpu_governor",
      "memory_optimization",
      "basic_network"
    ],
    "gamer": [
      "all_presets",
      "cpu_governor",
      "gpu_power_profiles",
      "gpu_fan_control",
      "memory_clock_tweaks",
      "custom_fan_curves",
      "fsr_control",
      "vrr_control",
      "advanced_network",
      "gamemode_integration",
      "proton_management",
      "per_game_profiles"
    ]
  },
  "environment_variables": {
    "gaming": {
      "PROTON_USE_WINED3D": "0",
      "PROTON_NO_ESYNC": "0",
      "PROTON_NO_FSYNC": "0",
      "PROTON_FORCE_LARGE_ADDRESS_AWARE": "1",
      "DXVK_ASYNC": "1",
      "VKD3D_SHADER_CACHE_PATH": "/home/aegis/.cache/vkd3d-shader-cache",
      "mesa_glthread": "true",
      "AMD_VULKAN_ICD": "RADV",
      "RADV_PERFTEST": "gpl"
    },
    "streaming": {
      "OBS_USE_EGL": "1",
      "LIBVA_DRIVER_NAME": "iHD"
    }
  }
}
