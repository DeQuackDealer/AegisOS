[Desktop Entry]
Name=Aegis Stream Deck
Comment=OBS Studio and streaming tools control center
GenericName=Stream Controller
Exec=/usr/local/bin/aegis-stream-deck --gui
Icon=camera-web
Terminal=false
Type=Application
Categories=Game;AudioVideo;Video;
Keywords=streaming;obs;twitch;youtube;broadcasting;recording;
StartupNotify=true
StartupWMClass=aegis-stream-deck
Actions=connect;stream;record;

[Desktop Action connect]
Name=Connect to OBS
Exec=/usr/local/bin/aegis-stream-deck --connect

[Desktop Action stream]
Name=Start Streaming
Exec=/usr/local/bin/aegis-stream-deck --start-stream

[Desktop Action record]
Name=Start Recording
Exec=/usr/local/bin/aegis-stream-deck --start-record
