<?xml version="1.0" encoding="UTF-8"?>
<!--
  Aegis OS - XFCE Panel Configuration
  Windows 10-inspired taskbar layout with translucent effect
  Version: 1.1.0
  
  Translucent Taskbar Configuration:
    - background-style: 1 (solid color with transparency)
    - background-rgba alpha: 0.85 (85% opacity)
    
  Compositor Integration Notes:
    - Requires a compositor for transparency effects (xfwm4 compositor or picom/compton)
    - Enable compositor: Settings > Window Manager Tweaks > Compositor
    - For best results, ensure "Enable display compositing" is checked
    - If using picom: Add "backend = glx" to picom.conf for better performance
    - Fallback: If no compositor, panel will appear solid (no transparency)
-->
<channel name="xfce4-panel" version="1.0">
  <!-- Global Panel Settings -->
  <property name="configver" type="int" value="2"/>
  <property name="panels" type="array">
    <value type="int" value="1"/>
  </property>

  <!-- Panel 1 - Main Taskbar (Windows-style bottom panel) -->
  <property name="panel-1" type="empty">
    <!-- Position: Bottom of screen -->
    <property name="position" type="string" value="p=8;x=0;y=0"/>
    <property name="position-locked" type="bool" value="true"/>
    <property name="mode" type="uint" value="0"/>
    <property name="span-monitors" type="bool" value="false"/>
    <property name="output-name" type="string" value="Primary"/>
    
    <!-- Size: 40px height like Windows 10 -->
    <property name="size" type="uint" value="40"/>
    <property name="length" type="uint" value="100"/>
    <property name="length-adjust" type="bool" value="true"/>
    
    <!-- Appearance - Translucent Taskbar -->
    <!-- background-style: 0=None, 1=Solid color, 2=Image -->
    <property name="background-style" type="uint" value="1"/>
    <!-- RGBA: Dark gray with 85% opacity for modern translucent effect -->
    <property name="background-rgba" type="array">
      <value type="double" value="0.15"/>
      <value type="double" value="0.15"/>
      <value type="double" value="0.15"/>
      <value type="double" value="0.85"/>
    </property>
    <property name="enter-opacity" type="uint" value="100"/>
    <property name="leave-opacity" type="uint" value="100"/>
    <property name="autohide-behavior" type="uint" value="0"/>
    <property name="icon-size" type="uint" value="24"/>
    <property name="dark-mode" type="bool" value="false"/>
    
    <!-- Plugin Layout (Left to Right) -->
    <property name="plugin-ids" type="array">
      <!-- Start Menu (Whisker Menu) -->
      <value type="int" value="1"/>
      <!-- Separator -->
      <value type="int" value="2"/>
      <!-- Show Desktop -->
      <value type="int" value="3"/>
      <!-- Task Manager (Quick Launch Area) -->
      <value type="int" value="4"/>
      <!-- Separator (expandable) -->
      <value type="int" value="5"/>
      <!-- Window Buttons (Taskbar) -->
      <value type="int" value="6"/>
      <!-- Separator (expandable) -->
      <value type="int" value="7"/>
      <!-- Notification Area Systray -->
      <value type="int" value="8"/>
      <!-- Status Notifier -->
      <value type="int" value="9"/>
      <!-- Separator -->
      <value type="int" value="10"/>
      <!-- PulseAudio -->
      <value type="int" value="11"/>
      <!-- Power Manager -->
      <value type="int" value="12"/>
      <!-- Network Manager -->
      <value type="int" value="13"/>
      <!-- Clock -->
      <value type="int" value="14"/>
      <!-- Action Buttons -->
      <value type="int" value="15"/>
    </property>
  </property>

  <!-- Plugin Configurations -->
  <property name="plugins" type="empty">
    
    <!-- Plugin 1: Whisker Menu (Start Menu) -->
    <property name="plugin-1" type="string" value="whiskermenu">
      <property name="button-icon" type="string" value="aegis-logo"/>
      <property name="button-title" type="string" value=""/>
      <property name="show-button-title" type="bool" value="false"/>
      <property name="button-single-row" type="bool" value="false"/>
      <property name="show-generic-names" type="bool" value="false"/>
      <property name="show-category-names" type="bool" value="true"/>
      <property name="show-tooltips" type="bool" value="true"/>
      <property name="item-icon-size" type="int" value="2"/>
      <property name="category-icon-size" type="int" value="1"/>
      <property name="category-show-name" type="bool" value="true"/>
      <property name="sort-categories" type="bool" value="false"/>
      <property name="position-search-alternate" type="bool" value="true"/>
      <property name="position-commands-alternate" type="bool" value="false"/>
      <property name="position-categories-alternate" type="bool" value="true"/>
      <property name="stay-on-focus-out" type="bool" value="false"/>
      <property name="confirm-session-command" type="bool" value="true"/>
      <property name="menu-width" type="int" value="450"/>
      <property name="menu-height" type="int" value="500"/>
      <property name="menu-opacity" type="int" value="100"/>
      <property name="launcher-show-name" type="bool" value="true"/>
      <property name="launcher-show-description" type="bool" value="true"/>
      <property name="launcher-icon-size" type="int" value="2"/>
      <property name="hover-switch-category" type="bool" value="false"/>
      <property name="profile-shape" type="int" value="0"/>
      <property name="default-category" type="int" value="0"/>
      <property name="recent-items-max" type="int" value="10"/>
      <property name="favorites-in-recent" type="bool" value="true"/>
      <property name="view-mode" type="int" value="1"/>
      <property name="background-opacity" type="int" value="100"/>
      <property name="command-settings" type="string" value="xfce4-settings-manager"/>
      <property name="command-lockscreen" type="string" value="xflock4"/>
      <property name="command-switchuser" type="string" value="dm-tool switch-to-greeter"/>
      <property name="command-logoutuser" type="string" value="xfce4-session-logout --logout"/>
      <property name="command-restart" type="string" value="xfce4-session-logout --reboot"/>
      <property name="command-shutdown" type="string" value="xfce4-session-logout --halt"/>
      <property name="command-suspend" type="string" value="xfce4-session-logout --suspend"/>
      <property name="command-hibernate" type="string" value="xfce4-session-logout --hibernate"/>
      <property name="command-logout" type="string" value="xfce4-session-logout"/>
      <property name="command-menueditor" type="string" value="menulibre"/>
      <property name="command-profile" type="string" value="mugshot"/>
    </property>

    <!-- Plugin 2: Separator -->
    <property name="plugin-2" type="string" value="separator">
      <property name="style" type="uint" value="0"/>
      <property name="expand" type="bool" value="false"/>
    </property>

    <!-- Plugin 3: Show Desktop Button -->
    <property name="plugin-3" type="string" value="showdesktop">
      <property name="show-icon" type="bool" value="true"/>
    </property>

    <!-- Plugin 4: Quick Launcher (Pinned Apps) -->
    <property name="plugin-4" type="string" value="launcher">
      <property name="items" type="array">
        <value type="string" value="thunar.desktop"/>
        <value type="string" value="firefox.desktop"/>
        <value type="string" value="xfce4-terminal.desktop"/>
      </property>
      <property name="show-label" type="bool" value="false"/>
      <property name="arrow-position" type="uint" value="0"/>
    </property>

    <!-- Plugin 5: Separator (Expandable) -->
    <property name="plugin-5" type="string" value="separator">
      <property name="style" type="uint" value="0"/>
      <property name="expand" type="bool" value="false"/>
    </property>

    <!-- Plugin 6: Window Buttons (Taskbar) -->
    <property name="plugin-6" type="string" value="tasklist">
      <property name="grouping" type="uint" value="1"/>
      <property name="include-all-workspaces" type="bool" value="false"/>
      <property name="include-all-monitors" type="bool" value="false"/>
      <property name="flat-buttons" type="bool" value="true"/>
      <property name="switch-workspace-on-unminimize" type="bool" value="true"/>
      <property name="show-labels" type="bool" value="true"/>
      <property name="show-handle" type="bool" value="false"/>
      <property name="show-wireframes" type="bool" value="false"/>
      <property name="show-only-minimized" type="bool" value="false"/>
      <property name="sort-order" type="uint" value="4"/>
      <property name="window-scrolling" type="bool" value="true"/>
      <property name="wrap-windows" type="bool" value="false"/>
      <property name="middle-click" type="uint" value="1"/>
      <property name="label-decorations" type="bool" value="false"/>
    </property>

    <!-- Plugin 7: Separator (Expandable) -->
    <property name="plugin-7" type="string" value="separator">
      <property name="style" type="uint" value="0"/>
      <property name="expand" type="bool" value="true"/>
    </property>

    <!-- Plugin 8: System Tray -->
    <property name="plugin-8" type="string" value="systray">
      <property name="square-icons" type="bool" value="true"/>
      <property name="symbolic-icons" type="bool" value="false"/>
      <property name="style" type="uint" value="0"/>
      <property name="icon-size" type="int" value="22"/>
      <property name="single-row" type="bool" value="false"/>
      <property name="hide-new-items" type="bool" value="false"/>
      <property name="known-legacy-items" type="array">
        <value type="string" value="blueman-applet"/>
        <value type="string" value="nm-applet"/>
        <value type="string" value="xfce4-power-manager"/>
      </property>
      <property name="hidden-legacy-items" type="array"/>
    </property>

    <!-- Plugin 9: Status Notifier (Modern systray) -->
    <property name="plugin-9" type="string" value="statusnotifier">
      <property name="icon-size" type="int" value="22"/>
      <property name="single-row" type="bool" value="false"/>
      <property name="symbolic-icons" type="bool" value="false"/>
      <property name="square-icons" type="bool" value="true"/>
      <property name="menu-is-primary" type="bool" value="false"/>
      <property name="hide-new-items" type="bool" value="false"/>
      <property name="known-items" type="array"/>
      <property name="hidden-items" type="array"/>
    </property>

    <!-- Plugin 10: Separator -->
    <property name="plugin-10" type="string" value="separator">
      <property name="style" type="uint" value="0"/>
      <property name="expand" type="bool" value="false"/>
    </property>

    <!-- Plugin 11: PulseAudio Volume -->
    <property name="plugin-11" type="string" value="pulseaudio">
      <property name="enable-keyboard-shortcuts" type="bool" value="true"/>
      <property name="show-notifications" type="bool" value="true"/>
      <property name="volume-step" type="uint" value="5"/>
      <property name="enable-mpris" type="bool" value="true"/>
      <property name="mpris-players" type="string" value=""/>
      <property name="mixer-command" type="string" value="pavucontrol"/>
      <property name="play-sound" type="bool" value="true"/>
      <property name="rec-indicator-persistent" type="bool" value="false"/>
    </property>

    <!-- Plugin 12: Power Manager -->
    <property name="plugin-12" type="string" value="power-manager-plugin">
      <property name="show-panel-label" type="int" value="0"/>
      <property name="show-percentage" type="bool" value="true"/>
      <property name="show-remaining-time" type="bool" value="true"/>
    </property>

    <!-- Plugin 13: Notification Area / Network -->
    <property name="plugin-13" type="string" value="notification-plugin">
      <property name="hide-counter" type="bool" value="false"/>
      <property name="hide-clear-prompt" type="bool" value="false"/>
      <property name="do-not-disturb" type="bool" value="false"/>
      <property name="show-in-menu" type="bool" value="true"/>
    </property>

    <!-- Plugin 14: Clock (Windows 10 format) -->
    <property name="plugin-14" type="string" value="clock">
      <property name="mode" type="uint" value="2"/>
      <property name="tooltip-format" type="string" value="%A, %B %d, %Y"/>
      <property name="digital-format" type="string" value="%l:%M %p&#10;%m/%d/%Y"/>
      <property name="digital-time-font" type="string" value="Noto Sans 10"/>
      <property name="digital-time-format" type="string" value="%l:%M %p"/>
      <property name="digital-date-format" type="string" value="%m/%d/%Y"/>
      <property name="digital-layout" type="uint" value="3"/>
      <property name="show-frame" type="bool" value="false"/>
      <property name="show-seconds" type="bool" value="false"/>
      <property name="flash-separators" type="bool" value="false"/>
      <property name="show-military" type="bool" value="false"/>
      <property name="show-meridiem" type="bool" value="true"/>
      <property name="timezone" type="string" value=""/>
      <property name="command" type="string" value=""/>
      <property name="rotate-vertically" type="bool" value="false"/>
    </property>

    <!-- Plugin 15: Action Buttons -->
    <property name="plugin-15" type="string" value="actions">
      <property name="appearance" type="uint" value="0"/>
      <property name="items" type="array">
        <value type="string" value="-lock-screen"/>
        <value type="string" value="-switch-user"/>
        <value type="string" value="-separator"/>
        <value type="string" value="-logout"/>
        <value type="string" value="-logout-dialog"/>
        <value type="string" value="-separator"/>
        <value type="string" value="-suspend"/>
        <value type="string" value="-hibernate"/>
        <value type="string" value="-hybrid-sleep"/>
        <value type="string" value="-separator"/>
        <value type="string" value="-shutdown"/>
        <value type="string" value="-restart"/>
      </property>
    </property>

  </property>
</channel>
