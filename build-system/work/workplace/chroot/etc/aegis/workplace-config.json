{
  "version": "1.5.0",
  "edition": "workplace",
  "description": "Aegis OS Workplace Edition Configuration",
  "tier": "workplace",
  "features": {
    "enterprise_suite": {
      "enabled": true,
      "m365_integration": true,
      "google_workspace": true,
      "sso_enabled": true,
      "ad_ldap_integration": true,
      "exchange_support": true
    },
    "collaboration": {
      "enabled": true,
      "screen_sharing": true,
      "video_conferencing": true,
      "team_chat": true,
      "whiteboard": true
    },
    "document_management": {
      "enabled": true,
      "pdf_editing": true,
      "ocr_enabled": true,
      "cloud_sync": true,
      "version_control": true,
      "supported_clouds": ["onedrive", "gdrive", "dropbox", "nextcloud"]
    },
    "productivity_tools": {
      "enabled": true,
      "time_tracking": true,
      "project_management": true,
      "crm_integration": true,
      "calendar_sync": true
    },
    "it_management": {
      "enabled": true,
      "remote_desktop": true,
      "network_monitoring": true,
      "asset_tracking": true,
      "helpdesk_integration": true
    }
  },
  "paths": {
    "config_dir": "/etc/aegis",
    "data_dir": "/var/lib/aegis/workplace",
    "log_dir": "/var/log/aegis",
    "documents_dir": "~/Documents/Aegis"
  },
  "security": {
    "encryption_at_rest": true,
    "secure_delete": true,
    "audit_logging": true
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "max_size_mb": 50,
    "backup_count": 5
  }
}
