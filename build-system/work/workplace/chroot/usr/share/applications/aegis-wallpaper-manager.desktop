[Desktop Entry]
Version=1.0
Type=Application
Name=Aegis Wallpaper Manager
GenericName=Wallpaper Manager
Comment=Browse, select, and manage desktop wallpapers
Exec=aegis-wallpaper-manager
Icon=preferences-desktop-wallpaper
Terminal=false
Categories=Settings;DesktopSettings;GTK;
Keywords=wallpaper;background;desktop;theme;slideshow;
StartupNotify=true
StartupWMClass=aegis-wallpaper-manager

Actions=slideshow;browse;

[Desktop Action slideshow]
Name=Start Slideshow
Exec=aegis-wallpaper-manager --slideshow
Icon=media-playlist-repeat

[Desktop Action browse]
Name=Browse Wallpapers
Exec=aegis-wallpaper-manager --gui
Icon=folder-pictures
