
# Buildroot configuration for Aegis OS Freemium
BR2_x86_64=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_15=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y

# Target packages
BR2_PACKAGE_BUSYBOX=y
BR2_PACKAGE_XORG7=y
BR2_PACKAGE_XFCE4=y
BR2_PACKAGE_XFCE4_PANEL=y
BR2_PACKAGE_XFCE4_SETTINGS=y
BR2_PACKAGE_XFCE4_SESSION=y
BR2_PACKAGE_XFCE4_DESKTOP=y
BR2_PACKAGE_XFCE4_TERMINAL=y
BR2_PACKAGE_XFCE4_APPFINDER=y
BR2_PACKAGE_THUNAR=y

# Gaming support
BR2_PACKAGE_MESA3D=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_RADEONSI=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_NOUVEAU=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_I965=y
BR2_PACKAGE_WINE=y

# Network and utilities
BR2_PACKAGE_DHCPCD=y
BR2_PACKAGE_OPENSSH=y
BR2_PACKAGE_WGET=y
BR2_PACKAGE_HTOP=y
BR2_PACKAGE_NANO=y

# Python for system scripts
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_SQLITE=y
BR2_PACKAGE_PYTHON3_SSL=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="2G"

# Bootloader
BR2_TARGET_GRUB2=y
BR2_TARGET_GRUB2_X86_64_EFI=y

# Custom scripts overlay
BR2_ROOTFS_OVERLAY="aegis-os-freemium/overlay"
BR2_ROOTFS_POST_BUILD_SCRIPT="aegis-os-freemium/post-build.sh"
