modules = ["python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["stripe:1.0.0", "python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Start Aegis Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "aegis-website"

[[workflows.workflow]]
name = "aegis-website"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aegis-promotional && python3 server.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Start Aegis Server"
author = 44896518
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aegis-promotional && python3 server.py"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd aegis-promotional && gunicorn --bind=0.0.0.0:5000 --workers=4 --timeout=120 server:app"]
