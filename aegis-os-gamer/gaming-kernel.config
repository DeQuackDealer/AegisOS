# Aegis OS Gamer Edition - Kernel Optimizations for Gaming

# Low-latency gaming kernel configuration
CONFIG_HZ=1000
CONFIG_HZ_1000=y
CONFIG_PREEMPT_VOLUNTARY=y
CONFIG_PREEMPT_RT=y

# CPU & Performance
CONFIG_CPU_FREQ_GOV_PERFORMANCE=y
CONFIG_CPU_FREQ_DEFAULT_GOV_PERFORMANCE=y
CONFIG_IRQ_FORCED_THREADING=y

# Memory & Swap
CONFIG_VM_SWAPPINESS=10
CONFIG_TRANSPARENT_HUGEPAGE=y
CONFIG_TRANSPARENT_HUGEPAGE_MADVISE=y

# I/O Scheduler
CONFIG_IOSCHED_DEADLINE=y
CONFIG_DEFAULT_DEADLINE=y

# GPU & Graphics
CONFIG_DRM=y
CONFIG_DRM_AMDGPU=y
CONFIG_DRM_AMDGPU_CIK=y
CONFIG_DRM_I915=y
CONFIG_DRM_NOUVEAU=y
CONFIG_FB_VESA=y

# Vulkan & OpenGL Support
CONFIG_DRM_KMS_HELPER=y
CONFIG_DRM_KMS_FB_HELPER=y

# Audio for Gaming
CONFIG_SOUND=y
CONFIG_SND=y
CONFIG_SND_HDA=y
CONFIG_SND_HDA_INTEL=y
CONFIG_SND_HDA_GENERIC=y

# Networking (Low-latency)
CONFIG_TCP_CONG_BBREV1=y
CONFIG_TCP_CONG_BBR=y
CONFIG_DEFAULT_TCP_CONG="bbr"
CONFIG_TCP_NO_METRICS_SAVE=y

# USB & Controllers
CONFIG_USB_HID=y
CONFIG_HID_LOGITECH=y
CONFIG_HID_LOGITECH_DJ=y

# Disable unneeded for gaming
# CONFIG_FLOPPY is not set
# CONFIG_PARPORT is not set
# CONFIG_VFAT_FS is not set (use ext4 only)

# Console & TTY
CONFIG_VT=y
CONFIG_SERIAL_8250=y
