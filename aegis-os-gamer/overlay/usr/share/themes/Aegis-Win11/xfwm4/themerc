# Aegis-Win11 XFWM4 Theme - Windows 11 style window decorations
# Dark theme with rounded corners and modern styling

# Window button layout
button_offset=4
button_spacing=2

# Title bar
title_alignment=center
title_horizontal_offset=0
title_vertical_offset_active=0
title_vertical_offset_inactive=0

# Colors (Windows 11 Dark)
active_text_color=#ffffff
inactive_text_color=#888888
active_color_1=#1a1a2e
active_color_2=#1a1a2e
inactive_color_1=#202020
inactive_color_2=#202020

# Borders
full_width_title=true
maximized_offset=0

# Window shadow
shadow_delta_height=2
shadow_delta_width=0
shadow_delta_x=0
shadow_delta_y=2
shadow_opacity=60

# Title bar height
title_shadow_active=false
title_shadow_inactive=false

# Button sizes
button_layout=O|HMC
